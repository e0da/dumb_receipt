source 'https://rubygems.org'

ruby '2.0.0'

gem 'sinatra'
gem 'slim'
gem 'sass'
gem 'redcarpet'
gem 'coffee-script'
gem 'activesupport'

group :production do
  gem 'puma'
end

group :development, :test do
  gem 'rake'
end

group :development do
  gem 'shotgun'
end

group :test do
  gem 'coveralls'
  gem 'guard'
  gem 'guard-rspec'
  gem 'kwalify'
  gem 'rack-test'
  gem 'rspec'
  gem 'simplecov'
end
